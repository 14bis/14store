<% content_for :page_title do %>
  <%= t(:edit_provider) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:back_to_providers_list), admin_providers_url, :icon => 'icon-arrow-left' %>
    <%= button_link_to t(:new_provider), new_admin_provider_url, :icon => 'icon-plus', :id => 'admin_new_provider_link' %>
  </li>
<% end %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @product } %>

<%= form_for @provider, :url => admin_provider_path, :method => :put do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>
